        "        continuar = int(input(\"Desea salir del sistema 1=SI 2=NO\"))\n",
        "        if continuar <=0 or continuar >=3:\n",
        "          print(\"Ingrese una opcion valida\")\n",
        "        if continuar ==1:\n",
        "          print(\"Adios\")\n",
        "          sw = 0\n",
        "    if op == 4:\n",
        "        print(\"Ha elegido ver clientes \")\n",
        "        mostrar_clientes()\n",
        "        continuar = int(input(\"Desa salir del sistema 1=SI 2=NO\"))\n",
        "        if continuar <=0 or continuar >=3:\n",
