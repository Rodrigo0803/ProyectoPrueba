        "clientes = []\n",
        "\n",
        "def mostrar_deptos_disponibles():\n",
        "    for fila in deptos_disponibles:\n",
        "        for depto in fila:\n",
        "            if depto is None:\n",
        "                print(\"[ ]\", end=\" \")\n",
        "            else:\n",
        "                print(\"[X]\", end=\" \")\n",
        "        print()\n",
        "\n",
        "def seleccionar_deptos():\n",
        "    rut = input(\"Ingrese su RUT: \")\n",
        "\n",
        "\n",
        "    fila = int(input(\"Ingrese la fila del depto: \"))\n",
        "    columna = int(input(\"Ingrese la columna del depto: \"))\n",
        "\n",
        "    fila-=1\n",
        "    columna-=1\n",
        "\n",
        "    if fila < 0 or fila >= len(deptos_disponibles) or columna < 0 or columna >= len(deptos_disponibles[0]):\n",
        "        print(\"Coordenadas inválidas.\")\n",
        "        return\n",
        "\n",
        "    if  deptos_disponibles[fila][columna] is None:\n",
        "        deptos_disponibles[fila][columna] = \"X\"\n",
        "        deptos_seleccionado = {\"fila\": fila, \"columna\": columna, \"rut\": rut}\n",
        "        clientes.append(deptos_seleccionado)\n",
        "        print(\"Depto seleccionado con éxito.\")\n",
        "    else:\n",
        "        print(\"El depto seleccionado no está disponible.\")\n",
        "\n",
        "\n",
        "def mostrar_detalles_deptos_seleccionado():\n",
        "    if len(clientes) > 0:\n",
        "        cliente = clientes[-1]\n",
        "        fila = cliente[\"fila\"]\n",
        "        columna = cliente[\"columna\"]\n",
        "        depto = detalles_deptos[columna + fila * len(deptos_disponibles[0])]\n",
        "        print(f\"Detalles del depto seleccionado:\")\n",
        "        print(f\"Número depto: {depto['numero']}\")\n",
        "        print(f\"Nombre del depto: {depto['depto']}\")\n",
        "        print(f\"Valor: {depto['valor']}\")\n",
        "    else:\n",
        "        print(\"No hay deptos seleccionados.\")\n",
        "\n",
        "\n",
        "\n",
        "\n",
        "\n",
        "def mostrar_clientes():\n",
        "    if len(clientes) > 0:\n",
        "        print(\"Clientes que han comprado deptos:\")\n",
        "        for cliente in clientes:\n",
        "            print(f\"RUT: {cliente['rut']}\")\n",
        "\n",
        "\n",
        "            print()\n",
        "    else:\n",
        "        print(\"Vacio\")\n",
